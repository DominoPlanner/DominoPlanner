<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DominoPlanner.Usage"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="110"
        x:Class="DominoPlanner.Usage.UserControls.RenameObject"
        Title="RenameObject"
         Height="110" Width="300" CanResize="False">
  <Window.Title>
    <Binding Path="OldName" StringFormat="Rename file: {0}"></Binding>
  </Window.Title>
  <Grid>
    <DockPanel Margin="10,10,10,0" VerticalAlignment="Top">
      <TextBlock DockPanel.Dock="Left" VerticalAlignment="Center">New name:</TextBlock>
      <TextBlock DockPanel.Dock="Right" Text="{Binding Extension}"></TextBlock>
      <TextBox Margin="10,0,0, 0" Text="{Binding CurrentName}" local:SelectAllFocusBehavior.Enable="True"></TextBox>
    </DockPanel>
    <Button Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10" IsCancel="True" Command="{Binding Cancel}">Cancel</Button>

    <Button Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" IsDefault="True" Command="{Binding OK}">OK</Button>
  </Grid>
</Window>
