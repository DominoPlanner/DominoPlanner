<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DominoPlanner.Usage.UserControls.View"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:parent="clr-namespace:DominoPlanner.Usage"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="DominoPlanner.Usage.UserControls.View.ColorListControl"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="445" MinWidth="445">
    <UserControl.Resources>
        <parent:ColorToHTMLConverter x:Key="ColorToHTMLConverter"/>
        <parent:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    </UserControl.Resources>
    <Grid Margin="0,0,0,0" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="234"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" HorizontalAlignment="Stretch" ItemsSource="{Binding DominoList}" SelectedItem="{Binding SelectedStone}" Margin="5,5,5,5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="30">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Rectangle Height="24" Width="16" Fill="{Binding RGB, Converter={StaticResource ColorToBrushConverter}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" Width="120" />
                    <GridViewColumn Header="RGB" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding RGB, Converter={StaticResource ColorToHTMLConverter}}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Count" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Count}" ContentStringFormat=" {0:##,#}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="140"/>
            </Grid.ColumnDefinitions>
            <xctk:PropertyGrid Grid.Column="0" Margin="5,0,0,0" VerticalAlignment="Stretch" SelectedObject="{Binding SelectedStone}" HorizontalAlignment="Stretch"/>
            <Button Grid.Column="2" Height="30" Margin="5,0,5,75" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Command="{Binding BtnAddColor}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Icons/add.ico" Height="20" RenderOptions.BitmapScalingMode="HighQuality" />
                    <Label Content="Add Color" />
                </StackPanel>
            </Button>
            <Button Grid.Column="2" Height="30" Margin="5,0,5,5" VerticalAlignment="Bottom" Command="{Binding BtnSaveColors}" HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal">
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Icons/document_save.ico" Height="20" />
                    <Label Content="Save Colors" />
                </StackPanel>
            </Button>
            <Button Grid.Column="2" Height="30" Margin="5,0,5,40" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Command="{Binding BtnRemove}">
                <StackPanel Orientation="Horizontal">
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Icons/remove.ico" Height="20" />
                    <Label Content="Remove Selected" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
