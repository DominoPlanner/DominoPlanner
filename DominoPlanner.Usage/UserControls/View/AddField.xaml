<UserControl x:Class="DominoPlanner.Usage.UserControls.View.AddField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DominoPlanner.Usage.UserControls.View"
             xmlns:intr="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" d:DesignWidth="390" Height="324">
    <Grid>
        <Label Content="{Binding sPath}" ContentStringFormat="Image Source: {0}" Margin="0,0,0,-24" HorizontalAlignment="Stretch"/>
        <Border BorderThickness="1" BorderBrush="Black" Margin="5,25,5,0" Height="93" VerticalAlignment="Top">
            <Image Source="{Binding pImage}" Margin="0,0,0,0">
                <intr:Interaction.Triggers>
                    <intr:EventTrigger EventName="MouseDown">
                        <intr:InvokeCommandAction Command="{Binding LoadNewImage}"/>
                    </intr:EventTrigger>
                </intr:Interaction.Triggers>
            </Image>
        </Border>
        <local:FieldSize Margin="1,118,1,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" DataContext="{Binding fieldSizeVM}"/>
    </Grid>
</UserControl>
