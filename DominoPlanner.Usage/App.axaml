<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DominoPlanner.Usage.App">
    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
      <Style Selector="HeaderedContentControl">
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate>
              <Border BorderBrush="Black"
                    BorderThickness="1" Margin="0, 5, 0, 0">
              <Grid>
                <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>
                  <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="Auto"/>
                  <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border ZIndex="1" Padding="5,0,5,0" Background="White" Margin="5,0,0,0" >
                  <TextBlock TextBlock.FontWeight="Bold" Text="{TemplateBinding Header}" />
                </Border>
                <Border Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="0,20,0,0"
                    BorderBrush="{TemplateBinding Background}" 
                    BorderThickness="1">
                  <ContentPresenter Content="{TemplateBinding Content}" />
                </Border>
              </Grid>
              </Border>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style Selector="NumericUpDown">
        <Setter Property="Margin" Value="5, 0">
        </Setter>
      </Style>
    </Application.Styles>
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="/Resources/Icons.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
